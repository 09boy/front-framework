{
  "compilerOptions": {
    "noImplicitAny": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": false,
    "module": "esnext",
    "target": "esnext",
    "skipLibCheck": true,
    "sourceMap": true,
    "allowJs": true,
    "noEmit": true,
    "strict": true,
    "types": ["node", "jest"],
    "typeRoots" : ["./node_modules/@types", "./typings", "./typings.d.ts"],
    "lib": [
      "es2020",
      "dom"
    ],
    "baseUrl": ".",
    "paths": {
      "*": ["./bin/*"]
    },
    "rootDir": ".",
    "outDir": "./dist"
  },
  "include": [
    "bin/**/*"
  ],
  "exclude": [
    "__tests__",
    "node_modules",
    "babel.config.js",
    "jest.config.js"
  ]
}
