{
  "compilerOptions": {
    "noImplicitAny": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": false,
    "module": "esnext",
    "target": "esnext",
    "skipLibCheck": true,
    "sourceMap": true,
    "allowJs": true,
    "noEmit": true,
    "strict": true,
    "jsx": "react-jsx",
    "types": ["node", "jest"],
    "typeRoots": ["./node_modules/@types", "./typings.d.ts"],
    "baseUrl": "./bin",
    "rootDir": ".",
    "outDir": "./dist"
  },
  "exclude": ["dist", "node_modules"]
}
